---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Heading from "~/components/Heading.astro";
import FAQ from "~/components/Faq.astro";

const faqItems = [
    {
        question: "What types of repairs do you offer?",
        answer: "We offer a wide range of repair services including engine diagnostics, brake repairs, transmission services, and more."
    },
    {
        question: "How long does a typical repair take?",
        answer: "The duration of a repair depends on the complexity of the issue. Our team will provide an estimated time after diagnosing the problem."
    },
    {
        question: "Do you use genuine parts for repairs?",
        answer: "Yes, we use only the highest quality genuine parts to ensure the best performance and longevity of your vehicle."
    }
];
---

<Layout pageTitle="Repairs" title="Repairs">
    <Section class:list={"bg-gray-50"}>
        <Container>
            <Heading>
                <h1 slot="heading-title">Repairs</h1>
                <p slot="heading-content">
                    At HyperDrive, we offer top-notch repair services to keep your luxury car in perfect condition. Our team of skilled technicians is equipped with the latest tools and technology to handle any repair job, big or small.
                </p>
            </Heading>
        </Container>
    </Section>

    <Section class:list={"bg-white"}>
        <Container>
            <FAQ items={faqItems} />
        </Container>
</Layout>