---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import Heading from "~/components/Heading.astro";
import Team from "~/components/Team.astro";
---

<Layout pageTitle="About Us" title="About Us">
	<Section class:list={"bg-gray-50"}>
		<Container>
			<Heading>
				<h1 slot="heading-title">About Us</h1>
				<p slot="heading-content">
					Welcome to HyperDrive! We are passionate about luxury cars and dedicated to providing the best
					service to our customers. Our team of experts is here to help you find the perfect car that suits
					your needs and preferences.
				</p>
			</Heading>
		</Container>
	</Section>

	<Section>
		<Container>
			<Heading>
				<h2 slot="heading-title">Our Mission</h2>
				<p slot="heading-content">
					At HyperDrive, our mission is to offer an exclusive collection of high-end vehicles that combine
					elegance, performance, and sophistication. We strive to provide an exceptional customer experience
					and ensure that every client drives away satisfied.
				</p>
			</Heading>
		</Container>
	</Section>

	<Section class:list={"bg-gray-50"}>
		<Container>
			<Heading>
				<h2 slot="heading-title">Meet Our Team</h2>
				<p slot="heading-content">
					Our dedicated team of professionals is here to assist you with all your car needs. Get to know the
					people behind HyperDrive.
				</p>
			</Heading>
			<Team />
		</Container>
	</Section>
</Layout>
