---
import type { ClassNameProps as Props } from "~/types";

const { class: className } = Astro.props;
const wrapperClasses = `max-w-3xl prose mb-16 ${className}`;
---

<div class={wrapperClasses}>
	<Fragment>
		<slot name="heading-title" />
	</Fragment>
	<Fragment>
		<slot name="heading-content" />
	</Fragment>

	<slot />
</div>
